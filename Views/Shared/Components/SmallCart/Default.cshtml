@model SmallCartViewModel


@if (Model != null)
{
        <p>Ürün Sayısı: <span class="badge badge-primary">@Model.NumberOfItems</span></p>
        <p>Total: <b>@Model.TotalAmount.ToString("C2")</b></p>
        <a class="btn btn-primary" asp-controller="Cart" asp-action="ShowCart">Listemi Gör</a>
        <a class="btn btn-danger" asp-controller="Cart" asp-action="Clear">Temizle</a>
}
else
{
        <p class="lead m-0">Listeniz Boş</p>
}



